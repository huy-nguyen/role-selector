{
  "name": "role-selector",
  "version": "0.6.0",
  "description": "Accessible role selector for Playwright, Puppeteer, jsdom, Cypress, and browsers",
  "main": "dist/index.js",
  "repository": "https://github.com/kevin940726/role-selector.git",
  "author": "Kai Hao",
  "license": "MIT",
  "scripts": {
    "postinstall": "npx playwright install-deps",
    "build": "tsc && rollup -c",
    "test": "npm run test:playwright && npm run test:puppeteer",
    "test:playwright": "jest -c test/jest.config.js",
    "test:puppeteer": "jest -c test/integration/puppeteer/jest.puppeteer.config.js",
    "prepare": "npm run build && npm run test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/jest": "^26.0.24",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "expect-playwright": "^0.8.0",
    "jest": "^26.6.3",
    "jest-playwright-preset": "^1.7.0",
    "jest-puppeteer": "^5.0.4",
    "playwright": "^1.14.1",
    "prettier": "2.2.1",
    "puppeteer": "^10.2.0",
    "rollup": "^2.56.3",
    "strip-ansi": "^7.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.4.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "axe-core": "^4.3.3"
  }
}
